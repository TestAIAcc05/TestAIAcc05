<Window x:Class="Desktop.ImportTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:Desktop.ImportTool.Views" 
        xmlns:converters="clr-namespace:Desktop.ImportTool.Converters"
        xmlns:viewmodels="clr-namespace:Desktop.ImportTool.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow"
        Background="#2D2D2D"
>
    <!--<Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>-->

    <Grid>
        <DockPanel LastChildFill="True">
            <Border Background="#393939" Height="48" DockPanel.Dock="Top">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Height="48">
                    <Button Content="Tasks" Margin="2" Padding="6,2"
                    Command="{Binding OpenTasksPaneCommand}"/>
                    <Button Content="History" Margin="2" Padding="6,2"
                    Command="{Binding OpenHistoryPaneCommand}"/>
                    <!--<telerik:RadToggleButton x:Name="ExplorerMenuItem"
                         IsChecked="{Binding ViewStateExplorer, Mode=TwoWay}">
                        Tasks
                    </telerik:RadToggleButton>-->
                    <!--<Button Style="{StaticResource DarkThemeIconButton}" ToolTip="Tasks View" Margin="0,0,8,0">
                    <Path StrokeThickness="2.6"
                          Stroke="White"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          StrokeLineJoin="Round"
                          Fill="Transparent"
                          Data="M4,8 L20,8 M4,12 L20,12 M4,16 L20,16"
                          Width="21" Height="21"/>
                </Button>
                <Button Style="{StaticResource DarkThemeIconButton}" ToolTip="History View" Margin="0,0,8,0">
                    <Path StrokeThickness="2.6"
                          Stroke="White"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          StrokeLineJoin="Round"
                          Fill="Transparent"
                          Data="M12,4 A8,8 0 1 1 4,12"
                          Width="21" Height="21"/>
                </Button>-->
                    <Button Style="{StaticResource DarkThemeIconButton}" ToolTip="Add Task" Margin="0,0,8,0"
                        Command="{Binding AddTaskCommand}">
                        <Path StrokeThickness="2.6"
                          Stroke="Lime"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          StrokeLineJoin="Round"
                          Fill="Transparent"
                          Data="M12,5 L12,19 M5,12 L19,12"
                          Width="21" Height="21"/>
                    </Button>
                    <Button Style="{StaticResource DarkThemeIconButton}" ToolTip="Finish Task" Margin="0,0,8,0"
                        Command="{Binding FinishTaskCommand}">
                        <Path StrokeThickness="2.6"
                          Stroke="YellowGreen"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          StrokeLineJoin="Round"
                          Fill="Transparent"
                          Data="M6,12 L10,16 L18,8"
                          Width="21" Height="21"/>
                    </Button>
                    <Button Style="{StaticResource DarkThemeIconButton}" ToolTip="Error" Margin="0,0,8,0"
                        Command="{Binding FailTaskCommand}">
                        <Path StrokeThickness="2.6"
                          Stroke="Red"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          StrokeLineJoin="Round"
                          Fill="Transparent"
                          Data="M12,7 L12,13 M12,17 L12,15"
                          Width="21" Height="21"/>
                    </Button>
                </StackPanel>
            </Border>

            <telerik:RadDocking x:Name="MainDocking" Margin="0">
                <telerik:RadDocking.DocumentHost>
                    <telerik:RadSplitContainer>
                        <telerik:RadPaneGroup x:Name="TasksPaneGroup" HorizontalAlignment="Stretch" >
                            <!-- Empty content intentionally (RestorePaneContents will replace it with the VM-created UserControl instance) -->
                            <telerik:RadPane x:Name="TasksPane"
                                         Header="Tasks"
                                         telerik:RadDocking.SerializationTag="Tasks"
                                         IsSelected="{Binding IsTasksSelected, Mode=TwoWay}"/>
                        </telerik:RadPaneGroup>
                        <telerik:RadPaneGroup x:Name="HistoryPaneGroup" HorizontalAlignment="Stretch">
                            <telerik:RadPane x:Name="HistoryPane"
                                         Header="History"
                                         telerik:RadDocking.SerializationTag="History"
                                         IsSelected="{Binding IsHistorySelected, Mode=TwoWay}"/>
                        </telerik:RadPaneGroup>
                    </telerik:RadSplitContainer>
                </telerik:RadDocking.DocumentHost>
            </telerik:RadDocking>
            <!--<telerik:RadDocking x:Name="MainDocking">
                <telerik:RadDocking.DocumentHost>
                    <telerik:RadSplitContainer>
                        <telerik:RadPaneGroup>
                            <telerik:RadPane x:Name="TasksPane" Header="Tasks" telerik:RadDocking.SerializationTag="TasksPane"
                            IsSelected="{Binding IsTasksSelected, Mode=TwoWay}">
                                <ContentControl Content="{Binding TasksView}"/>
                            </telerik:RadPane>
                        </telerik:RadPaneGroup>
                        <telerik:RadPaneGroup>
                            <telerik:RadPane x:Name="HistoryPane" Header="History" telerik:RadDocking.SerializationTag="HistoryPane"
                            IsSelected="{Binding IsHistorySelected, Mode=TwoWay}">
                                <ContentControl Content="{Binding HistoryView}"/>
                            </telerik:RadPane>
                        </telerik:RadPaneGroup>
                    </telerik:RadSplitContainer>
                </telerik:RadDocking.DocumentHost>
            </telerik:RadDocking>-->
        </DockPanel>
    </Grid>
</Window>
